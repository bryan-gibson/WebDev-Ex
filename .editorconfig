# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 80

# Indentation override for all JS under lib directory
[resources/**.js]
indent_style = space
indent_size = 2

# Indentation override for all JS under lib directory
[resources/**.vue]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

# 2 spaces for blade templates
[*.blade.php]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .circle.yml
[{package.json,.circle.yml}]
indent_style = space
indent_size = 2
